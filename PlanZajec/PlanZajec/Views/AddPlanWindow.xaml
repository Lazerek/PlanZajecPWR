<Window x:Class="PlanZajec.Views.AddPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanZajec.Views"
        mc:Ignorable="d"
        Title="Dodaj nowy plan" Height="135" Width="250" ResizeMode="NoResize">
    <Grid Margin="10, 5, 10, 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Label Content="Wybierz tytuł planu:" Grid.Row="0" />
        <TextBox Text="{Binding PlanTitle}" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Content="Dodaj" HorizontalAlignment="Right" Width="50" Height="25"  Grid.Row="2" Click="Dodaj" Margin="0, 10, 0, 0"/>
        <Button Content="Anuluj" HorizontalAlignment="Left" Width="50" Height="25" Grid.Row="2" Click="Anuluj" Margin="0, 10, 0, 0"/>
    </Grid>
</Window>
