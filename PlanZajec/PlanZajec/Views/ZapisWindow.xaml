<Window x:Class="PlanZajec.Views.ZapisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanZajec.Views"
        mc:Ignorable="d"
        Title="Zapisz plan" Height="160" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Wybierz plan do zapisu" HorizontalAlignment="Stretch" Grid.Row="0"/>
        <ComboBox x:Name="PlanyComboBox" HorizontalAlignment="Stretch" Grid.Row="1"/>
        <Button Content="Anuluj" Click="Anuluj_Click" Grid.Row="2" Margin="0, 10, 0, 0" HorizontalAlignment="Left" Width="70"/>
        <Button Content="Zapisz" Click="Zapisz_Click" Grid.Row="2" Margin="0, 10, 0, 0" HorizontalAlignment="Right" Width="70"/>
    </Grid>
</Window>
