<Window x:Class="PlanZajec.Views.DrukujWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanZajec.Views"
        mc:Ignorable="d"
        Title="Drukuj plan" Height="160" Width="300" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Content="Wybierz plan do drukowania" HorizontalAlignment="Left" Grid.Row="0" VerticalAlignment="Top" Width="180"/>
        <ComboBox x:Name="PlanyComboBox" Grid.Row="1" HorizontalAlignment="Stretch"/>
        <Button Content="Anuluj" HorizontalAlignment="Left" Grid.Row="2" Margin="0, 10, 0, 0" VerticalAlignment="Top" Width="80" Height="30" Click="Anuluj"/>
        <Button Content="Drukuj" HorizontalAlignment="Right" Grid.Row="2" Margin="0, 10, 0, 0" VerticalAlignment="Top" Width="80" Height="30" Click="Drukuj"/>

    </Grid>
</Window>
