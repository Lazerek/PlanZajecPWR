<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"

        mc:Ignorable="d"
        Title="Plan" VerticalAlignment="Stretch" Height="600" Width="800" MinHeight="600" HorizontalAlignment="Stretch"  MinWidth="800"
        Closing="MainWindow_OnClosing">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="560" Width="3*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition MinWidth="230" Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid x:Name = "LMenu"/>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <Grid x:Name = "RMenu" Grid.Row="1" Grid.Column="2">
        </Grid>
    </Grid>
</Window>
